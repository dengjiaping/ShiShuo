<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bkg"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color"
        >

        <ImageButton
            android:id="@+id/imgbtn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/main_color"
            android:src="@mipmap/return_button"
            />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:background="@drawable/live_title_shape"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/rb_inter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/teacher_bkg_secletor"
                android:gravity="center"
                android:text="备考干货"
                android:textColor="@drawable/main_title_text_selector"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/rb_writen"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/student_bkg_secletor"
                android:gravity="center"
                android:text="考试公告"
                android:textColor="@drawable/main_title_text_selector"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_infomation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
