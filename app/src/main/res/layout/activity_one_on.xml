<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bkg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="良师一对一抢课"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="26dp"
            android:text="免费预约"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="12dp"
            android:text="良师智胜教师招聘一对一辅导"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="姓    名："
            android:textColor="@color/main_button_enable"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写姓名"
            android:inputType="text"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="电    话："
            android:textColor="@color/main_button_enable"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写电话"
            android:inputType="phone"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="微    信："
            android:textColor="@color/main_button_enable"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/et_wx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写微信"
            android:inputType="phone|text"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:text="上课方式"
        android:textColor="@color/main_button_enable"
        android:textSize="14sp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"

        >

        <RadioButton
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/longbkg_checktor"
            android:button="@null"
            android:gravity="center"
            android:text="面授一对一"
            android:textColor="@drawable/main_title_text_chector"
            android:textSize="12sp"
            />

        <RadioButton
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/longbkg_checktor"
            android:button="@null"
            android:gravity="center"
            android:text="在线一对一"
            android:textColor="@drawable/main_title_text_chector"
            android:textSize="12sp"
            />
    </RadioGroup>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="上课地址"
            android:textColor="@color/main_button_enable"
            android:textSize="14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rb_hnan"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/longbkg_checktor"
                    android:button="@null"
                    android:gravity="center"
                    android:text="湖南"
                    android:textColor="@drawable/main_title_text_chector"
                    android:textSize="12sp"
                    />

                <RadioButton
                    android:id="@+id/rb_gdong"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/longbkg_checktor"
                    android:button="@null"
                    android:gravity="center"
                    android:text="广东"
                    android:textColor="@drawable/main_title_text_chector"
                    android:textSize="12sp"
                    />

                <RadioButton
                    android:id="@+id/rb_gzhou"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/longbkg_checktor"
                    android:button="@null"
                    android:gravity="center"
                    android:text="贵州"
                    android:textColor="@drawable/main_title_text_chector"
                    android:textSize="12sp"
                    />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="在线授课的方式在网络授课"
                android:textColor="@color/main_button_enable"
                android:textSize="12sp"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >

        <ImageButton
            android:id="@+id/img_btn_consulting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="16dp"
            android:background="@color/white"
            android:src="@mipmap/kf"
            />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:background="@color/main_color"
            android:text="提交预约"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </RelativeLayout>
</LinearLayout>
