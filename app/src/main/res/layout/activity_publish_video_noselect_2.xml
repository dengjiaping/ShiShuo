<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf3f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/x30"
            android:onClick="onBackClicked"
            android:src="@drawable/return_button" />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="视频完成"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_video_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/main_top_bar" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_video_image"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y13"
        android:text="标题"
        android:textSize="@dimen/x24"/>

    <EditText
        android:id="@+id/et_video_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_below="@+id/tv_title"
        android:background="@color/white"
        android:hint="请输入标题内容"
        android:layout_marginTop="@dimen/y15"
        android:maxLines="5"
        android:paddingLeft="@dimen/x20"
        android:textSize="@dimen/x30" />



    <LinearLayout
        android:id="@+id/ll_mylabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_video_description"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x24"
            android:text="我的标签" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/grown_label_selected_style"
            android:gravity="center"
            android:textColor="@color/white"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginLeft="@dimen/x20"
                android:background="@drawable/grown_label_selected_style"
                android:gravity="center"
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginLeft="@dimen/x40"
                android:background="@drawable/label_selected_style"
                android:gravity="center"
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginLeft="@dimen/x40"
                android:background="@drawable/label_selected_style"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/charge_video_publish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y68"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y50"
        android:background="@drawable/savebtnbkg_selector"
        android:text="上传视频"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>