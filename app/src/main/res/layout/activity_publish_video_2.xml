<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbf3f5">

    <RelativeLayout
        android:id="@+id/main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/x30"
            android:onClick="onBackClicked"
            android:src="@drawable/return_button" />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="视频上传"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_video_image"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="标题" />

    <EditText
        android:id="@+id/et_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:textCursorDrawable="@drawable/color_cursor"
        android:padding="5dp"
        android:hint="请输入标题内容"
        android:textSize="16sp" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_catg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择我的标签"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"

            />
        <RadioGroup
            android:id="@+id/rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/bt_trial_teaching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/roundconer_shortbkg_checkor"
                android:text="试讲"
                android:layout_margin="10dp"
                android:textColor="@drawable/main_title_text_chector"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/bt_speaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/roundconer_shortbkg_checkor"
                android:text="说课"
                android:layout_margin="10dp"
                android:textColor="@drawable/main_title_text_chector"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/bt_interview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/roundconer_longbkg_checkor"
                android:text="结构化面试"
                android:layout_margin="10dp"
                android:textColor="@drawable/main_title_text_chector"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/bt_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/roundconer_shortbkg_checkor"
                android:text="答辩"
                android:layout_margin="10dp"
                android:textColor="@drawable/main_title_text_chector"
                android:gravity="center"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_selected_style"
                android:text="小学"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_selected_style"
                android:text="语文"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/tv_catg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/label_selected_style"
                android:text="说课"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        >
        <CheckBox
            android:id="@+id/chc_box"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否只允许老师观看"
            />

    </LinearLayout>
    <Button
        android:id="@+id/change_video_publish"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/savebtnbkg_selector"
        android:text="上传视频"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</LinearLayout>