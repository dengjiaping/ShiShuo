<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA">

    <hengai.com.shishuo.live.view.HeadView
        android:id="@+id/id_private_user_head"
        style="@style/HeadIconStyle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/id_private_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/id_private_user_head"
        android:layout_marginRight="12sp"
        android:textColor="#999999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/id_private_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_private_user_head"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@id/id_private_user_head"
        android:layout_toLeftOf="@id/id_private_time"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_private_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_private_user_head"
        android:layout_alignLeft="@id/id_private_user_name"
        android:layout_marginRight="25dp"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/colorItemLine"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_below="@id/id_private_user_head"
        android:layout_marginTop="15dp"/>

</RelativeLayout>