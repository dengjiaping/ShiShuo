<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bkg"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/newlogo"
            />

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_head"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_apraise_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王老师"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_apraise_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="2017-08-27"
                    android:textColor="@color/main_button_enable"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_apraisse_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:layout_marginTop="8dp"
                android:text="很赞！讲的不错很赞！讲的不错很赞！讲的不错很赞！讲的不错很赞！讲"
                android:textColor="@color/main_button_enable"
                android:textSize="12sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_comments"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:text="回复老师"
            android:textColor="@color/main_color"
            android:textSize="15sp"
            />
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/main_button_enable"/>
</LinearLayout>
