<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:voyager="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bkg"
              android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y112"
        android:background="@color/main_color"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="22sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y38"
        android:layout_marginLeft="@dimen/x28"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的手机号："
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_login2_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y38"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y103"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x28"
            android:text="验证码:"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_login_phone"
            android:textCursorDrawable="@drawable/color_cursor"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:background="@null"
            android:inputType="number"
            android:hint="输入验证码"
            />
        <!--<Button
            android:id="@+id/btn_login2_send"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y88"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_login_bg"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            />-->
        <hengai.com.shishuo.ui.widget.CountDownButtonView
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/y88"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_login_bg"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            voyager:format="%d秒后重新获取"
            voyager:text="获取验证码"
            voyager:time="60" />
    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="@dimen/y38"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y103"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x28"
        android:text="设置密码:"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textCursorDrawable="@drawable/color_cursor"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLines="1"
        android:background="@null"
        android:hint="输入账号密码/6位以上"
        />

</LinearLayout>
    <Button
        android:id="@+id/btn_login2"
        android:background="@drawable/btn_login_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:text="下一步"
        android:gravity="center"
        android:layout_marginTop="@dimen/y75"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
</LinearLayout>
