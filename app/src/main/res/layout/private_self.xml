<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="9dp"
                android:paddingTop="9dp">

    <hengai.com.shishuo.live.view.HeadView
        android:id="@id/id_private_head"
        style="@style/HeadIconStyle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/id_private_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_private_head"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@id/id_private_head"
        android:background="@drawable/private_bubble_self"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingRight="16dp"
        android:paddingLeft="11dp"
        android:paddingTop="6dp"
        android:textColor="#333333"
        android:textSize="15sp"/>

</RelativeLayout>