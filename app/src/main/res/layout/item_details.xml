<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="第一课语文备考试卷解读"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/time_icon"
                />

            <TextView
                android:id="@+id/tv_time_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="2017-07-07"
                android:textColor="#666666"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_time_houes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="20:00开始"
                android:textColor="#666"
                android:textSize="14sp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_start"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:src="@mipmap/kcxq_button"
            android:layout_marginRight="30dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_button_enable"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_test_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:text="直播语文试卷第一套"
            android:textSize="14sp"
            android:textColor="@color/main_button_enable"
            />

        <TextView
            android:id="@+id/tv_test_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="我要做题"
            android:textColor="@color/main_color"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>
